#tshirts-carousel.carousel.slide(data-ride='carousel')
  // Indicators
  ol.carousel-indicators
    li.active(data-target='#tshirts-carousel', data-slide-to='0')
    li(data-target='#tshirts-carousel', data-slide-to='1')
    li(data-target='#tshirts-carousel', data-slide-to='2')
  // Wrapper for slides
  .carousel-inner(role='listbox')
    .item.active
      img(src='https://s3.amazonaws.com/makeitreal/projects/e-commerce/banner-slider-1.jpg', alt='...')
    .item
      img(src='https://s3.amazonaws.com/makeitreal/projects/e-commerce/banner-slider-2.jpg', alt='...')
    .item
      img(src='https://s3.amazonaws.com/makeitreal/projects/e-commerce/banner-slider-3.jpg', alt='...')
  // Controls
  a.left.carousel-control(href='#tshirts-carousel', role='button', data-slide='prev')
    span.glyphicon.glyphicon-chevron-left(aria-hidden='true')
    span.sr-only Previous
  a.right.carousel-control(href='#tshirts-carousel', role='button', data-slide='next')
    span.glyphicon.glyphicon-chevron-right(aria-hidden='true')
    span.sr-only Next
